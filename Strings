#include <iostream>
#include <string.h>
using namespace std;

int main() 
{
	char a[1000],b[1000],t;
    cin>>a>>b;
    int l1,l2,l;
    l1= strlen(a); l2= strlen(b);
    cout<<l1<<" "<<l2<<endl;
    cout<<a<<b<<endl;
    t = a[0];
    a[0] = b[0];
    b[0] = t;     
    cout<<a<<" "<<b;
    
    return 0;
}
